@model IEnumerable<WebMVC_HM_Teacher.Models.Teacher>
@{
    ViewBag.Title = "Index";
}

<h2>Teachers List</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.Email</td>
                <td>@teacher.Subject</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = teacher.Id })  |
                    @Html.ActionLink("Delete", "Delete", new { id = teacher.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Create New Teacher", "Create")

